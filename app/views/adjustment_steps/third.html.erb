<!-- サイドバー -->
<div class="container">
  <main class="main">
    <!-- メインコンテンツ -->
    <div>
      <%= link_to '次へ', next_wizard_path %>
    </div>
    <div>
      <%= link_to '戻る', previous_wizard_path %>
    </div>

    <div>
      <%= form_with(model: @adjustment, local: true ) do |form| %>
      <table class="table">
        <thead>
          <tr>
            <th width="30px">No.</th>
            <th>工事等の項目名</th>
            <th>通常損耗反映後の金額</th>
            <th>敷金精算書記載の数量</th>
            <th>あなたが考える数量</th>
            <th>単位</th>
            <th>理由</th>
            <th>負担割合</th>
            <th>負担範囲反映後の金額</th>
          </tr>
        </thead>
        <% i = 0 %>
          <%= form.fields_for :datails do |datail| %>
          <% i += 1 %>
          <tr>
            <td>
              <div class="estate_form">
                <%= i %>
              </div>
            </td>
            <td>
              <%= datail.text_field :item %>
            </div>
          </td>
          <td>
            <div class="estate_form">
              <%= datail.text_field :damage_cost %>
            </div>
          </td>
          <td>
            <div class="estate_form">
              <%= datail.text_field :rent_quantity %>
            </div>
          </td>
          <td>
            <div class="estate_form">
              <%= datail.text_field :my_quantity %>
            </div>
          </td>
          <td>
            <div class="estate_form">
              <%= datail.text_field :unit %>
            </div>
          </td>
          <td>
            <div class="estate_form">
              <%= datail.text_field :burden_reason %>
            </div>
          </td>
          <td>
            <div class="estate_form">
              <%= datail.text_field :burden_percentage %>
            </div>
          </td>
          <td>
            <div class="estate_form">
              <%= datail.text_field :burden_cost %>
            </div>
          </td>
        <% end %>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
      </table>
    </div>

  </main>
